{
    "name": "Highlight some phrases",
    "description": "Hightlight some pre defined text from websql database after page loads",
    "version": "0.1",
    "permissions": [
    "tabs","<all_urls>"
    ],
    "browser_action": {
        "default_icon": "./assets/img/shield.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
        "matches": [
            "http://*/*",
            "https://*/*"
            ],
        "js": ["./assets/js/jquery.js", "./assets/js/jquery-ui.js", "draggable.js", "main.js"],
        "run_at": "document_end"         // pay attention to this line
        }
    ], 
    "background": {
    "scripts": ["background.js", "./assets/js/jquery.js"]
    },
    "manifest_version":2
}

